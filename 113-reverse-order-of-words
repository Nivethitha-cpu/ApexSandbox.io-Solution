public String reverseWordsInASentence(String sentence){
    //your flawless code here
    if(sentence!=null)
    {
        list<string> sentenceList=sentence.split(' ');
        list<string> reversedList=new list<string>();
        
        for(integer i=sentenceList.size()-1;i>=0;i--)
        {
            reversedList.add(sentenceList[i]);
        }

        return string.join(reversedList,' ');
    }
    else
    {
        return null;
    }
   
}